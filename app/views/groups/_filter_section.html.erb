<%= simple_form_for :search, url: groups_path, remote: true, method: :get do |f| %>
  <div class="row align-items-start justify-space-between mb-5">
    <div class="d-flex col-lg-3 mx-auto flex-column">
      <a class="m-0 p-0 mr-auto">Distance</a>
      <div class="line" id="customRange0"></div>
      <!-- <input type="range" class="custom-range my-2 pr-2" max="100" min="1" id="customRange0"> -->
      <%= number_field_tag 'range', nil, min: 1, max: 10, step: 2 %>
      <%#= number_field_tag(range, value = 25, in: 1..100) %>
    </div>
    <div class="d-flex col-lg-3 mx-auto flex-column">
        <a class="m-0 p-0 mr-auto">Genre</a>
        <div class="line"></div>
        <div class="row">
          <div class="col-3 mt-2">
            <%= render 'shared/button_regular', content: "+" %>
          </div>
          <div class="col-8 p-0 ml-auto">
            <div class="search-form-control form-group d-flex justify-content-center">
              <!-- <input class="form-control string required" type="text" name="search[query]" id="search_query" /> -->
              <%= f.input :tags, collection: ActsAsTaggableOn::Tag.all, value_method: 'name', as: :select,label: false, class: "col-lg-10 ", placeholder: "English" %>
            </div>
          </div>
        </div>
    </div>
    <div class="d-flex col-lg-3 mx-auto flex-column">
        <a class="m-0 p-0 mr-auto">Language</a>
        <div class="line"></div>
        <div class="row">
          <div class="col-3 mt-2">
            <%= render 'shared/button_regular', content: "+" %>
          </div>
          <div class="col-8 p-0 ml-auto">
            <div class="search-form-control form-group d-flex justify-content-center">
              <!-- <input class="form-control string required" type="text" name="search[query]" id="search_query" /> -->
              <%= f.input :language, collection: Language.all, as: :select, label: false, class: "col-lg-10 ", placeholder: "English" %>
            </div>
          </div>
        </div>
    </div>
  </div>
<% end %>
