<div class="justify-content-center">
  <div class="row ">
    <div class="col-lg-12">
      <%= simple_form_for :search, url: groups_path, method: :get do |f| %>
        <div class="search-form-control form-group d-flex justify-content-center">
          <!-- <input class="form-control string required" type="text" name="search[query]" id="search_query" /> -->
          <%= text_field_tag :query, params[:query], class: "form-control col-lg-10", placeholder: "Where do you want to meet?" %>
          <button name="button" type="submit" class="btn btn-regular-searchbar mr-auto">
            <i class="fas fa-search"></i> Search
          </button>
        </div>
        <%= render 'groups/filter_section' %>
      <% end %>
    </div>
  </div>
</div>
